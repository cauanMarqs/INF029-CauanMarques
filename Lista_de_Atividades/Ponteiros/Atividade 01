#include <stdio.h>
#include <stdlib.h>

int main (){
	
	int c;
	
	// Variaveis primitivas
	
	int inteiro;
	char caractere;
	double quebrado;
	float flutuante;
	char string [10];
	
	// ponteiros
	
	int *pInteiro;
	char *pCaractere;
	double *pQuebrado;
	float *pFlutuante;
	char *pString;
	
	// scanf das primitivas
	
	printf("Insira um numero inteiro: ");
	scanf("%d", &inteiro);
	while ((c = getchar()) != '\n' && c != EOF) {}
	
	printf("\n Insira um caractere: ");
	scanf(" %c", &caractere);
	while ((c = getchar()) != '\n' && c != EOF) {}
	
	printf("\n Preencha a variavel do tipo double: ");
	scanf("%lf", &quebrado);
	while ((c = getchar()) != '\n' && c != EOF) {}
	
	printf("\nPreencha a variavel do tipo float: ");
	scanf("%f", &flutuante);
	while ((c = getchar()) != '\n' && c != EOF) {}
	
	printf("\nPreencha a string: ");
	scanf("%s", string);
	while ((c = getchar()) != '\n' && c != EOF) {}
	
	// imprimir o que foi escrito
	
	printf("%d", inteiro);
	printf("\n");
	printf("%c", caractere);
	printf("\n");
	printf("%lf", quebrado);
	printf("\n");
	printf("%.2f", flutuante);
	printf("\n");
	printf("%s", string);
	printf("\n");
	
	// ponteiro só faz guardar endereço, então acho que não faz scanf
	
	pInteiro = &inteiro;
	pCaractere = &caractere;
	pQuebrado = &quebrado;
	pFlutuante = &flutuante;
	pString = string;
	
	// imprimir os ponteiros
	
	printf("%p", pInteiro);
	printf("\n");
	printf("%p", pCaractere);
	printf("\n");
	printf("%p", pQuebrado);
	printf("\n");
	printf("%p", pFlutuante);
	printf("\n");
	printf("%p", pString);
	printf("\n");
	
}
